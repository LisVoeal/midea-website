---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
---

<Layout pageTitle="About" />
<Navigation />

<div class="container">
  <h1>Каталог</h1>
  <div class="catalog-container">
    <div class="catalog-list item">
      <ul>
        <h5>Каталог</h5>
        <li>Стиральные машины</li>
        <li>Посудомоечные машины</li>
        <li>Холодильники</li>
        <li>Духовые шкафы</li>
        <li>Микроволновые печи</li>
        <li>Пылесосы</li>
        <li>Варочные панели</li>
        <li>Мелкая бытовая техника</li>
      </ul>
    </div>
    <div class="catalog-items item">
      <ul>
        <h5>Каталог</h5>
        <li>Стиральные машины</li>
        <li>Посудомоечные машины</li>
        <li>Холодильники</li>
        <li>Духовые шкафы</li>
        <li>Микроволновые печи</li>
        <li>Пылесосы</li>
        <li>Варочные панели</li>
        <li>Мелкая бытовая техника</li>
      </ul>
    </div>
  </div>
</div>
<Footer />
<Layout />

<style>
  .container {
    display: flex;
    flex-direction: column;
    height: 90vh;
    width: 85%;
    margin: 0 auto;
  }
  .catalog-container {
    display: flex;
    flex-direction: row;
    max-width: 100%;
    height: 100%;
  }
  .catalog-list {
    flex: 1;
  }
  .catalog-items {
    flex: 4;
  }
  .item {
    max-height: 100%;
    margin: 10px 0;
    border: 1px solid rgba(0, 0, 0, 0.1);
  }
  .catalog-list ul {
    list-style: none;
  }
  .catalog-list ul h5 {
    font-size: 16px;
  }
  .catalog-list li {
    padding: 10px;
  }
</style>
