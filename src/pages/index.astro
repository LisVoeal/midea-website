---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import { Image } from "astro:assets";
import washingMachine from "../assets/categories-pics/washing-machine.png";
import dishwasher from "../assets/categories-pics/dishwasher.png";
import freezer from "../assets/categories-pics/freezers.png";
import oven from "../assets/categories-pics/oven.png";
import microwave from "../assets/categories-pics/microwave.png";
import vacuum from "../assets/categories-pics/vacuum.png";
import stove from "../assets/categories-pics/stove.png";
import smalls from "../assets/categories-pics/smalls.png";
---

<Layout>
	<Header />

	<main>
		<h2>Обслуживание и Ремонт техники Midea</h2>
		<div class="categories">
			<ul class="categories-list">
				<li class="categories-item">
					<Image src={washingMachine} alt="Ремонт стиральных машин" />
					<p class="item-text">Ремонт стиральных машин</p>
				</li>
				<li class="categories-item">
					<Image src={dishwasher} alt="Ремонт посудомоечных машин" />
					<p class="item-text">Ремонт посудомоечных машин</p>
				</li>
				<li class="categories-item">
					<Image src={freezer} alt="Ремонт холодильник" />
					<p class="item-text">Ремонт холодильников</p>
				</li>
				<li class="categories-item">
					<Image src={oven} alt="Ремонт духовых шкафов" />
					<p class="item-text">Ремонт духовых шкафов</p>
				</li>
				<li class="categories-item">
					<Image src={microwave} alt="Ремонт микроволновых печей" />
					<p class="item-text">Ремонт микроволновых печей</p>
				</li>
				<li class="categories-item">
					<Image src={vacuum} alt="Ремонт пылесосов" />
					<p class="item-text">Ремонт пылесосов</p>
				</li>
				<li class="categories-item">
					<Image src={stove} alt="Ремонт варочных панелей" />
					<p class="item-text">Ремонт варочных панелей</p>
				</li>
				<li class="categories-item">
					<Image src={smalls} alt="Ремонт мелкой бытовой техники" />
					<p class="item-text">Ремонт мелкой бытовой техники</p>
				</li>
			</ul>
		</div>
	</main>
</Layout>

<style>
	main {
		width: 100%;
		height: 100vh;
		display: flex;
		flex-direction: column;
		align-items: center;
	}
	h2{
		color: rgb(100,100,100);
		font-family: Roboto, sans-serif;
		font-size: 48px;
		text-align: center;
	}
	.categories {
		display: flex;
		justify-content: center;
		width: 80%;
		height: 100%;
	}
	.categories-list {
		list-style: none;
		width: 100%;
		height: 100%;
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: space-around;
		flex-wrap: wrap;
		padding-bottom: 2%;
	}
	.categories-item {
		width: 325px;
		height: 400px;
		border: 1px solid gray;
		border-radius: 20px;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: space-between;
		overflow: hidden;
	}
	.categories-item:hover{
		border: 1px solid #1f94d2;
	}
	.categories-item img{
		width: auto;
		height: auto;
		overflow: hidden;
		margin-top: 20%;
	}
	.item-text{
		max-width: 80%;
		color: rgb(100,100,100);
		text-transform: uppercase;
		font-size: 24px;
		text-align: center;
		font-family: Roboto, sans-serif;
		font-weight: bold;
	}
</style>
