---
import Navigation from "../components/Navigation.astro";
---

<header>
  <Navigation />
  <div class="header-container">
    <h1>Ремонт бытовой техники Midea</h1>
    <a href="#" class="request-button">Оставить заявку на ремонт</a>
  </div>
</header>

<style>
  h1 {
    color: white;
    text-align: center;
    font-size: 48px;
    margin: 60px 20px;
    text-shadow: 0px 2px 2px rgba(0, 0, 0, 0.5);
  }
  header {
    height: 75vh;
    background-image: url(../assets/headerimg.jpeg);
    background-size: cover;
    background-repeat: no-repeat;
  }
  .header-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
  }
  .request-button {
    background-color: #1f94d2;
    padding: 25px 50px;
    color: white;
    font-weight: bold;
    font-size: 20px;
    text-transform: uppercase;
    text-decoration: none;
    border-radius: 50px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.75);
    transition: 0.5s;
  }
  .request-button:hover {
    box-shadow: 0 2px 3px rgba(0, 0, 0, 0.5);
  }
  @media (max-width: 500px) {
    .request-button {
      font-size: 18px;
    }
  }
  @media (max-width: 850px) {
    .navigation {
      display: none;
    }
    .burger-menu {
      display: flex;
      align-items: center;
      justify-content: flex-end;
      margin-right: 20px;
    }
  }
</style>
