---
import { Image } from "astro:assets";
import logo from "../assets/logo.svg";
---

<nav>
  <a href="#"><Image src={logo} alt="Logo" width="120" height="120" /></a>
  <ul class="navigation">
    <li><a href="#">Каталог</a></li>
    <li><a href="#">Гарантия</a></li>
    <li><a href="#">Платный ремонт</a></li>
    <li><a href="#">Контакты</a></li>
    <li><a href="#">Полезное</a></li>
  </ul>
  <div class="burger-menu">Меню</div>
</nav>

<style>
  nav {
    height: 8vh;
    width: 100%;
    background-color: #1f94d2;
    display: flex;
    align-items: center;
    box-shadow: 0 5px 5px rgba(0, 0, 0, 0.25);
  }
  .burger-menu {
    display: none;
    color: white;
    font-size: 22px;
    font-weight: bold;
    height: 100%;
    width: 100%;
  }
  .navigation {
    margin: 0;
    padding-left: 0;
    width: 100%;
    list-style: none;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    height: 100%;
  }
  nav a img {
    margin-left: 20px;
  }
  li {
    text-transform: uppercase;
    font-size: 24px;
    font-family: "Roboto", sans-serif;
    font-weight: bold;
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100%;
  }
  li a {
    padding: 0 50px;
    color: white;
    text-decoration: none;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
  }
  li a:hover {
    background-color: rgba(0, 0, 0, 0.15);
  }

  @media (max-width: 1450px) {
    li {
      font-size: 16px;
    }
    li a {
      padding: 0 25px;
    }
  }
  @media (max-width: 768px) {
    .navigation {
      display: none;
    }
    .burger-menu {
      display: flex;
      align-items: center;
      justify-content: flex-end;
      margin-right: 20px;
    }
  }
</style>
