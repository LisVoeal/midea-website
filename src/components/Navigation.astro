---
import { Image } from "astro:assets";
import logo from "../assets/logo.svg";
---

<nav>
  <a href="#"><Image src={logo} alt="Logo" width="120" height="120" /></a>
  <ul class="navigation">
    <li><a href="#">Каталог</a></li>
    <li><a href="#">Гарантия</a></li>
    <li><a href="#">Контакты</a></li>
    <li><a href="#">Полезное</a></li>
  </ul>
</nav>

<style>
  nav {
    position: relative;
    width: 100%;
    height: 4vw;
    background-color: #1f94d2;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    box-shadow: 0 5px 5px rgba(0,0,0, .15);
  }
  .navigation {
    position: absolute;
    width: 100%;
    height: 100%;
    list-style: none;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
  }
  nav a {
    margin-left: 20px;
  }
  li {
    text-transform: uppercase;
    font-size: 24px;
    font-family: "Roboto", sans-serif;
    font-weight: bold;
  }
  li a {
    padding: 15px 20px;
    color: white;
    text-decoration: none;
  }
  li a:hover {
    background-color: rgba(0, 0, 0, 0.15);
  }
  p {
    font-family: Roboto, sans-serif;
    font-size: 18px;
    color: white;
    font-weight: bold;
  }
</style>
